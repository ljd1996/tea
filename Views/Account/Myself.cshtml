<!doctype html>
<html class="no-js" lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>注册</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/animate.css">
        <link rel="stylesheet" href="~/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/pe-icon-7-stroke.min.css">
        <link rel="stylesheet" href="~/css/meanmenu.min.css">
        <link rel="stylesheet" href="~/css/magnific-popup.css">
        <link rel="stylesheet" href="~/css/slick.min.css">
        <link rel="stylesheet" href="~/css/jquery-ui.min.css">
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" href="~/css/responsive.css">
    </environment>
</head>

<body>

<section class="login-page section-padding">
    <div class="container">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
                <div class="single-input p-bottom50 clearfix">
                    <form action="updateUser" method="post">
                        <div class="row">
                            @{
                                <input hidden="hidden" name="role"
                                value="@User.Claims.SingleOrDefault(s=>s.Type==System.Security.Claims.ClaimTypes.Role).Value">
                                <input hidden="hidden" name="id"
                                value="@User.Claims.SingleOrDefault(s=>s.Type==System.Security.Claims.ClaimTypes.Sid).Value">
                            }
                            <div class="col-xs-6">
                                <label>用户名:</label>
                                <div class="input-text">
                                    @{
                                        <input type="text" name="name" required="required"
                                        value="@User.Claims.SingleOrDefault(s=>s.Type==System.Security.Claims.ClaimTypes.Name).Value">
                                    }
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <label>密码:</label>
                                <div class="input-text">
                                    @{
                                        <input type="password" name="password" required="required"
                                        value="@User.Claims.SingleOrDefault(s=>s.Type==System.Security.Claims.ClaimTypes.Anonymous).Value">
                                    }
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <label>手机号:</label>
                                <div class="input-text">
                                    @{
                                    <input type="text" name="phone" required="required"
                                           oninput="value=value.replace(/[^\d]/g,'')"
                                           maxlength="11"
                                        value="@User.Claims.SingleOrDefault(s=>s.Type==System.Security.Claims.ClaimTypes.HomePhone).Value">
                                    }
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <label>地址:</label>
                                <div class="input-text">
                                    @{
                                        var address = @User.Claims.SingleOrDefault(s=>s.Type==System.Security.Claims.ClaimTypes.StreetAddress).Value;
                                        <input type="text" name="address" required="required"
                                        value="@address">
                                    }
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="submit-text">
                                    <input type="submit" name="submit" value="修改">
                                </div>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</section>

</body>
</html>
