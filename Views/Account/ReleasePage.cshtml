<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>商品发布</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/animate.css">
        <link rel="stylesheet" href="~/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/pe-icon-7-stroke.min.css">
        <link rel="stylesheet" href="~/css/meanmenu.min.css">
        <link rel="stylesheet" href="~/css/magnific-popup.css">
        <link rel="stylesheet" href="~/css/slick.min.css">
        <link rel="stylesheet" href="~/css/jquery-ui.min.css">
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" href="~/css/responsive.css">

        <script src="~/js/vendor/modernizr-2.8.3.min.js"></script>
        <script src="~/js/vendor/jquery-1.12.3.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/camera.min.js"></script>
        <script src="~/js/jquery.easing.1.3.js"></script>
        <script src="~/js/slick.min.js"></script>
        <script src="~/js/jquery-ui.min.js"></script>
        <script src="~/js/magnific-popup.min.js"></script>
        <script src="~/js/countdown.js"></script>
        <script src="~/js/jquery.meanmenu.js"></script>
        <script src="~/js/plugins.js"></script>
        <script src="~/js/map-script.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/jquery.js"></script>
        <script src="~/js/jquery.backstretch.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
</head>
<body>

<div class="contact-informaion section-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="contact-form clearfix">
                        <form action="release" enctype="multipart/form-data"
                              method="post">
                            <div class="col-sm-6">
                                <div class="input-text">
                                    <input type="text" name="name" placeholder="商品名称" required="required"
                                           maxlength="100"/>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-text">
                                    <input type="text" name="price" placeholder="商品价格" required="required"
                                           onkeyup="clearNoNum(this)"/>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="input-text">
                                    <input type="text" name="count" placeholder="商品库存" required="required"
                                           oninput="value=value.replace(/[^\d]/g,'')"/>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <input type="file" id="chooseImage1" name="file" required="required" onchange="chooseImg1(this)">
                                <img id="cropedBigImg1" alt="图片背景"
                                     data-address=''
                                     title="自定义背景"/>
                            </div>

                            <div class="col-xs-12">
                                <div class="submit-text">
                                    <input type="submit" name="submit" value="发布"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>
