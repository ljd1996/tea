<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>首页</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/animate.css">
        <link rel="stylesheet" href="~/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/pe-icon-7-stroke.min.css">
        <link rel="stylesheet" href="~/css/meanmenu.min.css">
        <link rel="stylesheet" href="~/css/magnific-popup.css">
        <link rel="stylesheet" href="~/css/slick.min.css">
        <link rel="stylesheet" href="~/css/jquery-ui.min.css">
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" href="~/css/responsive.css">
    </environment>
</head>
<body>

<section class="product-content section-padding">
    <div class="container">
        <div class="row">
            <div class="tab-content">
                <div class="tab-pane fade in active text-center" id="grid">
                    @{
                        var list = (List<Product>)ViewBag.list;
                        if (list.Count <= 0) {
                            <div class="col-xs-12" if="${product.size()==0}">
                                <h3 style="color: #761c19">当前没有任何商品！</h3>
                            </div>
                        }

                        foreach (Product product in list) {
                            <div class="col-xs-4">
                                <div class="product-item margin40">
                                    <div class="pro-img">
                                        <a href=file/img/@product.image.Substring(@product.image.LastIndexOf('/')+1)>
                                            <img src=file/img/@product.image.Substring(@product.image.LastIndexOf('/')+1)
                                                alt="Product"
                                                style="width: 100%;height: 320px;object-fit: cover"/>
                                        </a>
                                        <div class="tag-n-s">
                                            <span>库存：@product.count</span>
                                        </div>
                                        <div class="tag-n-s" style="margin-left: 72px">@{
                                            switch (product.status) {
                                                case 0:
                                                    <span>在架</span>
                                                    break;
                                                case 1:
                                                    <span>已下架</span>
                                                    break;
                                                case 2:
                                                    <span>已售罄</span>
                                                    break;
                                            }}
                                        </div>
                                    </div>
                                    <div style="margin-top: 12px">
                                        <span>@product.name&nbsp;&nbsp;&nbsp;@{@product.price}RMB</span>
                                    </div>
                                    <div class="col-xs-6"  style="margin-top: 12px;margin-bottom: 12px">
                                        <button class="submit-text btn btn-default active"
                                            onclick="'javascript:setStatus(\''+${product.getId()}+'\',\''+'1'+'\');'">加入购物车
                                        </button>
                                    </div>
                                    <div class="col-xs-6"  style="margin-top: 12px;margin-bottom: 12px">
                                        <button class="submit-text btn btn-default active"
                                            onclick="'javascript:setStatus(\''+${product.getId()}+'\',\''+'1'+'\');'">立即购买
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="col-xs-12" style="margin-top: 12px;margin-bottom: 20px"></div>
                                <hr style="width: 100%;color: #843534" SIZE=10>
                                <div class="col-xs-12" style="margin-top: 12px;margin-bottom: 20px"></div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

</body>
</html>
